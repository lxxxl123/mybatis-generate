<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${package}.${dao}.${name}Mapper">

    <resultMap id="BaseResultMap" type="${package}.${entity}.${name}">
        #foreach($column in $columns)
            #if(${column.pk})
                <id property="${column.javaFieldName}" column="${column.columnName}" jdbcType="${column.jdbcType}"/>
            #else
                <result property="${column.javaFieldName}" column="${column.columnName}" jdbcType="${column.jdbcType}"/>
            #end
        #end
    </resultMap>

    <sql id="Base_Column_List">
        #foreach($column in $columns)##
${column.columnName}#if($foreach.hasNext),#end##
#end

    </sql>
#if(${isMerge})
    <update id="merge">
        MERGE ${table} AS t
        USING  (SELECT
        #foreach($column in $columns)##
            #{obj.${column.columnName}} as ${column.columnName} #if($foreach.hasNext),
        #end##
        #end
        ) AS s
        ON t.id = s.id
        WHEN MATCHED THEN
        UPDATE SET
        #foreach($column in $columns)##
            #if(!${column.pk}) t.${column.columnName} = s.${column.columnName} #if($foreach.hasNext), #end
        #end##
        #end
        WHEN NOT MATCHED THEN
        INSERT (#foreach($column in $columns) #if(!${column.pk}) ${column.columnName} #if($foreach.hasNext), #end  #end #end)
        VALUES (#foreach($column in $columns) #if(!${column.pk}) s.${column.columnName} #if($foreach.hasNext), #end #end #end);
    </update>
#end
</mapper>
